<div class="col-md-3" id="task_form">
	<%= simple_form_for [@system,@task], :html => {:multipart => true} do |f| %>
		<p><h4>Название задачи</h4><p>
		<p><%= f.input :name, label: false %></p>
		<p><h4>Описание</h4><p>
		<p><%= f.input :description, as: :text, label: false %></p>
		<p><%= f.button :submit, 'Создать' , html: { class: 'btn btn-default' }%></p>
	<%end%>
</div>